---
import { ClientRouter } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicontinta&razon.avif" />
    <meta name="generator" content={Astro.generator} />
    <!-- Tipografia -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@1,400..900&display=swap" rel="stylesheet">

    <!-- Segunda Tipografia -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- Tercera Tipografia -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-gradient-to-r from-gray-100 to-gray-50">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  html {
    scroll-behavior: smooth;
  }

  /* Barra de desplazamiento para navegadores compatibles */
  ::-webkit-scrollbar {
    width: 12px; /* Ancho de la barra */
  }

  ::-webkit-scrollbar-track {
    background: #e5e5e5; /* Fondo del track */
    border-radius: 10px; /* Bordes redondeados */
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(
      180deg,
      #cccccc,
      #888888
    ); /* Degradado elegante */
    border-radius: 10px; /* Bordes redondeados */
    border: 3px solid #e5e5e5; /* Espacio entre el thumb y el track */
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(
      180deg,
      #aaaaaa,
      #666666
    ); /* Color m√°s oscuro al pasar el cursor */
    border: 3px solid #dcdcdc; /* Cambia ligeramente el borde */
  }

  /* Estilo para navegadores como Firefox */
  * {
    scrollbar-width: thin; /* Barra delgada */
    scrollbar-color: linear-gradient(180deg, #cccccc, #888888) #e5e5e5; /* Thumb y track */
  }
</style>
